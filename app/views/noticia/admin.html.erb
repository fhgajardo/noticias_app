<p id="notice"><%= notice %></p>

<h1>Noticias Administrador</h1>



  
    <% @noticia.each do |noticium| %>
    <table>
      <thead>
        <tr>
          <th>Titular</th>
          <th>Bajada</th>
          <th>Fecha</th>
          <th>Cuerpo</th>
          <th>Comentarios</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
      <tr>
        <td><%= noticium.titular %></td>
        <td><%= noticium.bajada %></td>
        <td><%= noticium.fecha %></td>
        <td><%= noticium.cuerpo.truncate(503) %></td>
        <td><%= noticium.comentarios.count %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_noticium_path(noticium) %></td>
          <td><%= link_to 'Destroy', noticium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <td><%= link_to 'Leer completa', noticium %></td>
      </tr>
    </tbody>
    </table>
    <% end %>


<br>
<% if user_signed_in? %>
  <%= link_to 'Agregar Noticia', new_noticium_path %>  
<% end %>

